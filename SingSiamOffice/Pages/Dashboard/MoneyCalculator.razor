@page "/moneycalculator"
@* <h3>MoneyCalculator</h3> *@

<div class="container mt-4 mb-4">
    <div class="row">
        <div class="col-12 text-center">
            <img src="img/icons/SingCircle.png" alt="" style="width:10rem;">
        </div>
        <div class="col-12 text-center">
            <h4>บริษัท สิงห์สยาม ลิสซิ่ง จำกัด</h4>
        </div>
        <div class="col-12 text-center mb-4">
            <h4>ตารางคำนวนเงินกู้</h4>
        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                       
                        <div class="col-12">
                            <div class="input-group mb-3">
                                <span class="input-group-text">ยอดเงินที่ต้องการกู้</span>
                                <input type="text" class="form-control" placeholder="ระบุยอดเงินที่ต้องการกู้"  >
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="input-group mb-3">
                                <span class="input-group-text">ระบุดอกเบี้ย</span>
                                <select class="form-select" @bind="@selectInterest" placeholder="ระบุดอกเบี้ย">
                                    
                                    <option value="2">1.19</option>
                                    <option value="3">1.25</option>
                                    <option value="4">1.90</option>
                                    <option value="5">ระบุจำนวน %</option>
                                </select>
                            
                            </div>
                        </div>
                        @if (selectInterest == 5)
                        {
                            <div class="col-12">
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1">ระบุดอกเบี้ย %</span>
                                    <input type="text" class="form-control" aria-label="ระบุดอกเบี้ย %">
                                </div>
                            </div>
                        }
                      
                        <div class="col-12 text-center">
                            <button type="button" class="btn btn-primary " style="@buttoncolor1">คำนวน</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                      
                        <div class="col-12 text-center">
                            <h5>ยอดเงินกู้ : <span style="@money_color"> 50000</span> บาท</h5>
                            <h5>ดอกเบี้ย : <span style="@interest_color"> 1.19</span> %</h5>
                        </div>
                        <div class="col-12">
                            <table class="table table-striped table-bordered">
                                <thead class="text-center">
                                    <tr>
                                        <th style="@buttoncolor1" scope="col">งวด</th>
                                        <th style="@buttoncolor1" scope="col">งวดละ</th>

                                    </tr>
                                </thead>
                                <tbody class="text-center">
                                    <tr>

                                        <td>งวดที่ 1</td>
                                        <td>งวดละ 43,332 บาท</td>

                                    </tr>

                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
  

</div>


@code {
    string buttoncolor1 = "background-color:#840012; color:#FFF; font-weight:600;";
    string money_color = "color:#145a32; font-weight:600;";
    string interest_color = "color:#840012; font-weight:600;";

    private double selectInterest { get; set; }
}
